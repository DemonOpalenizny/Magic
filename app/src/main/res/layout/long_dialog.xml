<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_gravity="center"
    android:background="@drawable/creator_bg"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="169dp"
        android:layout_height="wrap_content">

        <TextView
            android:text=""
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/power"
            android:textAlignment="center"
            android:layout_marginLeft="41dp"
            android:layout_alignBottom="@+id/takep"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:text="-"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:id="@+id/takep"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent" />

        <Button
            android:text="+"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:id="@+id/addP"
            android:background="@android:color/transparent"
            android:layout_alignBottom="@+id/power"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="POWER"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview10"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_alignTop="@+id/addP"
            android:layout_toEndOf="@+id/takep"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="169dp"
        android:layout_height="wrap_content">

        <TextView
            android:text=""
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/toughness"
            android:textAlignment="center"
            android:layout_marginLeft="41dp"
            android:layout_alignBottom="@+id/takeT"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:text="-"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:id="@+id/takeT"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="+"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:background="@android:color/transparent"
            android:id="@+id/addT"

            android:layout_alignParentEnd="true" />

        <TextView
            android:text="TOUGHNESS"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textview9"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_alignTop="@+id/addT"
            android:layout_toEndOf="@+id/takeT"
            />

    </RelativeLayout>

    <Button
        android:layout_gravity="center"
        android:text="Copy"
        android:paddingTop="10dp"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/copy"
        android:background="@android:color/transparent"
        android:textAlignment="center" />

    <Button
        android:layout_gravity="center"
        android:text="Destroy"
        android:layout_width="170dp"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/destroy"
        android:textAlignment="center" />

    <Button
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:text="Back"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:id="@+id/exit"
        android:textAlignment="center" />
</LinearLayout>