<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/creator_bg"
    tools:context="com.madry.rafal.magic.Creator">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/fullscreen_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="76dp">

                        <Button
                            android:text="-"
                            android:layout_width="35dp"
                            android:layout_height="34dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/minuspower"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@android:color/black" />

                        <Button
                            android:text="+"
                            android:layout_width="35dp"
                            android:layout_height="34dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/pluspower"

                            android:layout_alignParentEnd="true"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:text="POWER"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/ffdsgdfgd"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:layout_alignBaseline="@+id/minuspower"
                            android:layout_alignBottom="@+id/minuspower"
                            android:layout_toStartOf="@+id/pluspower" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true">

                        <Button
                            android:text="-"
                            android:layout_width="35dp"
                            android:layout_height="34dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/takeT1"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@android:color/black" />

                        <Button
                            android:text="+"
                            android:layout_width="35dp"
                            android:layout_height="34dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/addTT"

                            android:layout_alignParentEnd="true"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:text="TOUGHNESS"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/dddfdf9"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@android:color/black"
                            android:layout_alignBaseline="@+id/takeT1"
                            android:layout_alignBottom="@+id/takeT1"
                            android:layout_toEndOf="@+id/takeT1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_width="169dp"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/relativeLayout2"
                        android:layout_alignParentStart="true">



                        <Button
                            android:text="-"
                            android:layout_width="35dp"
                            android:background="@android:color/transparent"
                            android:layout_height="34dp"
                            android:id="@+id/takeQ"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:textColor="@android:color/black" />

                        <Button
                            android:text="+"
                            android:layout_width="35dp"
                            android:layout_height="34dp"
                            android:background="@android:color/transparent"
                            android:id="@+id/addQ"

                            android:layout_alignParentEnd="true"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:text="Quantity"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/blalalal"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:layout_alignBaseline="@+id/takeQ"
                            android:layout_alignBottom="@+id/takeQ"
                            android:layout_toEndOf="@+id/takeQ" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="157.5dp"
                    android:layout_height="220dp"
                    android:background="@drawable/card_frame2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="50dp">

                    <FrameLayout
                        android:layout_width="157.5dp"
                        android:layout_height="180dp">

                        <ImageView
                            android:layout_width="136dp"
                            android:layout_height="170dp"
                            android:layout_gravity="center"
                            android:id="@+id/csymbol" />

                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif"
                            android:typeface="serif"
                            android:id="@+id/creator_t"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/creator_stats" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif"
                            android:typeface="serif"
                            android:id="@+id/creator_stats"
                            android:layout_gravity="center"
                            android:layout_alignBaseline="@+id/creator_t"
                            android:layout_alignBottom="@+id/creator_t"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="sans-serif"
                            android:typeface="serif"
                            android:id="@+id/creator_p"
                            android:layout_alignParentTop="true"
                            android:layout_toStartOf="@+id/creator_stats" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="X"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cexit"
                    android:background="@android:color/transparent"
                    android:textSize="30sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/black"
                    android:textAlignment="textEnd" />

                <TextView
                    android:text="X"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/cexit"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="46dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/creatorQ"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="40sp"
                    android:layout_below="@+id/cexit"
                    android:layout_alignStart="@+id/create"
                    android:layout_marginTop="34dp" />

                <Button
                    android:layout_gravity="center"
                    android:text="CREATE"
                    android:layout_width="170dp"
                    android:paddingTop="15dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/create"
                    android:background="@android:color/transparent"
                    android:fontFamily="serif"
                    android:layout_below="@+id/creatorQ"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="32dp"
                    android:textColor="@android:color/black" />
            </RelativeLayout>





        </LinearLayout>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scrollbars="none"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/cl"
                    android:id="@+id/cl" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/f"
                    android:id="@+id/f" />

                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/s"
                    android:id="@+id/s" />

                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/i"
                    android:id="@+id/i" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/m"
                    android:id="@+id/m" />

                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/p"
                    android:id="@+id/p" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fi"
                    android:id="@+id/fi" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fm"
                    android:id="@+id/fm" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fp"
                    android:id="@+id/fp" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/fs"
                    android:id="@+id/fs" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/im"
                    android:id="@+id/im" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ip"
                    android:id="@+id/ip" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/is"
                    android:id="@+id/is" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/mp"
                    android:id="@+id/mp" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ms"
                    android:id="@+id/ms" />
                <ImageView
                    android:onClick="onSymbolClick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ps"
                    android:id="@+id/ps" />

            </LinearLayout>



        </HorizontalScrollView>


    </LinearLayout>


</FrameLayout>